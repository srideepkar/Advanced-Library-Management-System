@model Category
@{
    ViewData["Title"] = "Edit";
}

<Center><h2>Edit an existing book info here..</h2></Center>
<form method="POST" asp-action="Edit">
    <div class="form-group m-4">
        <label asp-for="BookName">Edit Book name: </label>
        <input class="form-control" type="text" asp-for="BookName" value=@ViewBag.Book />
    </div>
    <div class="form-group m-4">
        <label asp-for="Available">Edit Book Status: </label>
        <input class="form-check-input" type="checkbox" asp-for="Available" />
    </div>
    <button type="submit" class="btn btn-primary m-4">Done</button>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Category">Dashboard</a>
</form>
