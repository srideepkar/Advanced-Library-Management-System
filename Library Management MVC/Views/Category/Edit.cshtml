@model Category
@{
    ViewData["Title"] = "Edit";
    var book = ViewBag.book;
}

<Center><h2>Edit an existing book info here..</h2></Center>
<form method="POST" asp-action="Edit">
    <div class="form-group m-4">
        <label asp-for="BookName">Edit Book name: </label>
        <input class="form-control" type="text" asp-for="BookName" value=@book.BookName />
    </div>
    <div class="form-group m-4">
        <label asp-for="Author">Author name </label>
        <input class="form-control" type="text" asp-for="Author" value=@book.Author />
    </div>
    <div class="form-group m-4">
        <label asp-for="ISBN">Book ISBN </label>
        <input class="form-control" type="text" asp-for="ISBN" value=@book.ISBN />
    </div>
    <div class="form-group m-4">
        <label asp-for="Genre">Book genre </label>
        <input class="form-control" type="text" asp-for="Genre" value=@book.Genre />
    </div>
    <div class="form-group m-4">
        <label asp-for="Series">Book series name (If Any) </label>
        <input class="form-control" type="text" asp-for="Series" value=@book.Series />
    </div>
    <div class="form-group m-4">
        <label asp-for="Publisher">Book Publisher Name </label>
        <input class="form-control" type="text" asp-for="Publisher" value=@book.Publisher />
    </div>
    <!--<div class="form-group m-4">
        <label asp-for="PublishDate">Book Publish Date </label>
        <input class="form-control" type="date" asp-for="PublishDate" value=@book.PublishDate />
    </div>-->
    <div class="form-group m-4">
        <label asp-for="Available">Edit Book Status: </label>
        <input class="form-check-input" type="checkbox" asp-for="Available" />
    </div>
    <button type="submit" class="btn btn-primary m-4">Done</button>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Category">Dashboard</a>
</form>
