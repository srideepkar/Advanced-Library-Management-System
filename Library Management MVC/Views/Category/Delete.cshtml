
@{
    ViewData["Title"] = "Delete";
}

@model Category

<Center><h2>Delete an existing book info here..</h2></Center>
<form method="POST" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="form-group m-4">
        <label asp-for="BookName">Edit Book name: </label>
        <input class="form-control" type="text" asp-for="BookName" value=@ViewBag.BookName disabled />
    </div>
    <div class="form-group m-4">
        <label asp-for="Available">Edit Book Status: </label>
        <input class="form-check-input" type="checkbox" asp-for="Available" value=@ViewBag.BookAvail disabled />
    </div>
    <button class="btn btn-danger m-4" type="submit">Delete</button>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Category">Dashboard</a>
</form>