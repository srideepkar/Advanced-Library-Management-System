@model Category
@{
    ViewData["Title"] = "Add";
}

<Center><h2>Add New Book Here..</h2></Center>
<form method="POST">
    <div class="form-group m-4">
        <label asp-for="BookName">Book name </label>
        <input class="form-control" type="text" asp-for="BookName" placeholder="New Book Name" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Author">Author name </label>
        <input class="form-control" type="text" asp-for="Author" placeholder="Book Author Name" />
    </div>
    <div class="form-group m-4">
        <label asp-for="ISBN">Book ISBN </label>
        <input class="form-control" type="text" asp-for="ISBN" placeholder="Book ISBN" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Genre">Book genre </label>
        <input class="form-control" type="text" asp-for="Genre" placeholder="Book Genre" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Series">Book series name (If Any) </label>
        <input class="form-control" type="text" asp-for="Series" placeholder="Book Series Name" />
    </div>
    <div class="form-group m-4">
        <label asp-for="Publisher">Book Publisher Name </label>
        <input class="form-control" type="text" asp-for="Publisher" placeholder="Book Publisher Name" />
    </div>
    <div class="form-group m-4">
        <label asp-for="PublishDate">Book Publish Date </label>
        <input class="form-control" type="date" asp-for="PublishDate" placeholder="Book Publish Date" />
    </div>
    
    <div class="form-check m-4">
        <label asp-for="Available">Book Availability Status </label>
        <input class="form-check-input" type="checkbox" asp-for="Available" />
    </div>
    
    <button type="submit" class="btn btn-primary m-4">Add The book</button>

    <a class="btn btn-warning" asp-action="Index" asp-controller="Category">Dashboard</a>
</form>

